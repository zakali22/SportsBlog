<% include partials/head %>
    <div class="container mt-5 ">
    	<% if(articles.length === 0) { %>
    		<h1 class="text-center">Unfortunately there are no <%= category %> articles</h1>
    	<% } else { %>
		    <% articles.forEach((article) => { %>
				<div class="list-group mb-5">
				  <a href="/articles/show/<%= article._id %>" id="articleListItem" class="list-group-item list-group-item-action flex-column align-items-start">
				    <div class="d-flex w-100 justify-content-between">
				      <h2 class="mb-1"><%= article.title %></h2>
				    </div>
				    <h4 class="mb-1 lead"><%= article.subtitle %></h4>
				   	<small><%= article.created_at %></small>
				    <p class="mt-3">by <%= article.author %></p>
				  </a>
				</div>
			<% }) %>
		<% } %>
	</div>
<% include partials/footer %>